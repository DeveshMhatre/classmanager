<h1 class="center-align">Create New User</h1>

<%= form_with model: @user, html: { class: '' } do |f| %>
	<% if @user.errors.any? %>
		<div>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
					<li>
						<%= message %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div>
		<%= f.label :username %>
		<%= f.text_field :username, :placeholder => "Enter username" %>
	</div>

	<div>
		<%= f.label :password %>
		<%= f.password_field :password, :placeholder => "Enter password" %>
	</div>

	<div>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation, :placeholder => "Confirm password" %>
	</div>

	<p class="center-align">
		<%= f.submit "Create User", class: "waves-effect waves-light btn purple darken-4" %>
	</p>
<% end %>
